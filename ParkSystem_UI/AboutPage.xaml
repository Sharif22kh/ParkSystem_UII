<Page x:Class="ParkSystem_UI.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParkSystem_UI"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1200"
      Title="AboutPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F6F3EB">
        <StackPanel Margin="40" HorizontalAlignment="Center">

            <!-- Title Block -->
            <Border Background="#3C6E71"
                    CornerRadius="12"
                    BorderBrush="White"
                    BorderThickness="2"
                    Width="1200"
                    Padding="15"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="About Us And Contact"
                               FontFamily="Playfair Display"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Learn about us here at Onewhero Bay Heritage Park and what we stand for!"
                               FontFamily="IBM Plex Sans"
                               FontSize="20"
                               FontStyle="Italic"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content Block -->
            <Border Background="White"
                    CornerRadius="0"
                    BorderBrush="#3C6E71"
                    BorderThickness="2"
                    Padding="30"
                    Width="950"
                    HorizontalAlignment="Center">
                <StackPanel>

                    <TextBlock Text="About Us"
                               FontFamily="Playfair Display"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#2F2F2F"
                               Margin="0,0,0,10"
                               TextAlignment="Center"/>

                    <TextBlock FontFamily="IBM Plex Sans"
                               FontSize="16"
                               Foreground="#5A7263"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               TextAlignment="Center">
                        This is placeholder text for the about us section of the Onewhero Bay Heritage Park.
                        This text is supposed to represent the design layout.
                        The about us page of this scenario will hold information about the founding and
                        development of the Onewhero Bay Heritage Park. Where it started, what has happened,
                        and where it intends to progress.
                    </TextBlock>

                    <TextBlock Text="Contact"
                               FontFamily="Playfair Display"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#2F2F2F"
                               Margin="0,10,0,10"
                               TextAlignment="Center"/>

                    <TextBlock FontFamily="IBM Plex Sans"
                               FontSize="16"
                               Foreground="#5A7263"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"
                               TextAlignment="Center">
                        If you feel the need to contact us, please do so using the following information!
                        We are always available.
                    </TextBlock>

                    <TextBlock FontFamily="IBM Plex Sans"
                               FontSize="16"
                               Foreground="#5A7263"
                               Margin="0,0,0,0"
                               TextAlignment="Center">
                        <Run FontWeight="Bold">Phone:</Run> 022 123456<LineBreak/>
                        <Run FontWeight="Bold">Email:</Run> OnewheroBayHeritagePark@email.com<LineBreak/>
                        <Run FontWeight="Bold">Address:</Run> 123 Onewhero Park Road, Onewhero Bay
                    </TextBlock>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
