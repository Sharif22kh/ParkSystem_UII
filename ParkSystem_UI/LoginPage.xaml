<!-- Frontend code by Aki(Riria) Hamblett-Watt -->
    <Page x:Class="ParkSystem_UI.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParkSystem_UI"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1200"
      Title="LoginPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F6F3EB">
        <StackPanel Margin="40" HorizontalAlignment="Center">

            <!-- Title Block -->
            <Border Background="#3C6E71"
                    CornerRadius="0"
                    BorderBrush="White"
                    BorderThickness="2"
                    Width="1200"
                    Padding="15"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Login"
                               FontFamily="Playfair Display"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Login to your account here!"
                               FontFamily="IBM Plex Sans"
                               FontSize="20"
                               FontStyle="Italic"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Login Form Block -->
            <Border Background="White"
                    CornerRadius="0"
                    BorderBrush="#3C6E71"
                    BorderThickness="2"
                    Padding="30"
                    Width="500"
                    HorizontalAlignment="Center">
                <StackPanel>

                    <TextBlock Text="Name:"
                               FontFamily="Playfair Display"
                               FontSize="16"
                               Foreground="#2F2F2F"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox" 
                             Text="Type full name here..."
                             FontSize="16"
                             Padding="10"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Email:"
                               FontFamily="Playfair Display"
                               FontSize="16"
                               Foreground="#2F2F2F"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="ContactTextBox" 
                             Text="Type email here..."
                             FontSize="16"
                             Padding="10"
                             Margin="0,0,0,30"/>

                    <Button x:Name="LoginButton" 
                            Content="Login"
                            Click="LoginButton_Click"
                            FontFamily="Playfair Display"
                            FontSize="18"
                            Background="#E2B857"
                            Foreground="#2F2F2F"
                            Padding="10"
                            Cursor="Hand"
                            Width="440"
                            Height="60"
                            HorizontalAlignment="Center"/>

                    <TextBlock Text="And if you'd like to sign-up, register here!"
                               FontFamily="IBM Plex Sans"
                               FontSize="14"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="#5A7263"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
