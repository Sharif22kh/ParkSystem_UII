<Page x:Class="ParkSystem_UI.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParkSystem_UI"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1200"
      Title="HomePage">

    <Grid Background="#F6F3EB">
        <!-- Homepage Content (sits below nav) -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- Tui Image -->
                <Image Source="/Assets/STOCK_Tuiphoto.jpg"
                    Height="300"
                    Width="1200"
                    Stretch="UniformToFill"
                    Margin="0,0,0,20"/>

                <!-- Welcome Message Box -->
                <Border Background="#3C6E71"
                        Width="1200"
                        CornerRadius="0"
                        Padding="15"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="WELCOME TO ONEWHERO BAY HERITAGE PARK!"
                   FontFamily="Playfair Display"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#F6F3EB"
                   TextAlignment="Center"
                   Margin="0,0,0,10"/>
                        <TextBlock Text="~ Where heritage and nature merge as one ~"
                   FontFamily="IBM Plex Sans"
                   FontSize="20"
                   FontStyle="Italic"
                   Foreground="#F6F3EB"
                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>


                <!-- Image Gallery -->
                <WrapPanel HorizontalAlignment="Center">
                    <Border Background="#D3CFC7" Width="240" Height="180" Margin="10" CornerRadius="5">
                        <Image Source="/Assets/STOCK_maoriculturephoto.jpeg"
                   Stretch="UniformToFill" Margin="5"/>
                    </Border>
                    <Border Background="#D3CFC7" Width="240" Height="180" Margin="10" CornerRadius="5">
                        <Image Source="/Assets/STOCK_event4photo.jpeg"
                   Stretch="UniformToFill" Margin="5"/>
                    </Border>
                    <Border Background="#D3CFC7" Width="240" Height="180" Margin="10" CornerRadius="5">
                        <Image Source="/Assets/STOCK_fantailphoto.jpg"
                   Stretch="UniformToFill" Margin="5"/>
                    </Border>
                    <Border Background="#D3CFC7" Width="240" Height="180" Margin="10" CornerRadius="5">
                        <Image Source="/Assets/STOCK_museumphoto.jpg"
                   Stretch="UniformToFill" Margin="5"/>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>