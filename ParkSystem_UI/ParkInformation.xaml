<Page x:Class="ParkSystem_UI.ParkInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F6F3EB">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">

            <Border Background="#3C6E71"
        CornerRadius="0"
        BorderBrush="White"
        BorderThickness="2"
        Width="1200"
        Padding="15"
        Margin="0,0,0,5"
        HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Park Information"
                   FontFamily="Playfair Display"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#F6F3EB"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
                    <TextBlock Text="Please have a look at what we have to explore at Onewhero Bay Heritage Park!"
                   FontFamily="IBM Plex Sans"
                   FontSize="20"
                   FontStyle="Italic"
                   Foreground="#F6F3EB"
                   TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Attraction Cards -->
            <WrapPanel ItemWidth="580" ItemHeight="Auto" Orientation="Horizontal">

                <!-- Museum -->
                <Border Background="White" CornerRadius="10" BorderBrush="#3C6E71" BorderThickness="2" Padding="15" Margin="10">
                    <StackPanel>
                        <Image Source="/Assets/STOCK_museumphoto.jpg" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                        <TextBlock Text="Museum"
                                   FontFamily="Playfair Display"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2F2F2F"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="This is filler information and words for the Museum at Onewhero Bay Heritage Park..."
                                   FontFamily="IBM Plex Sans"
                                   FontSize="14"
                                   Foreground="#5A7263"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Nocturnal Kiwi House -->
                <Border Background="White" CornerRadius="10" BorderBrush="#3C6E71" BorderThickness="2" Padding="15" Margin="10">
                    <StackPanel>
                        <Image Source="/Assets/STOCK_kiwiphoto.jpg" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                        <TextBlock Text="Nocturnal Kiwi House"
                                   FontFamily="Playfair Display"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2F2F2F"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="This is filler information and words for the Nocturnal Kiwi House at Onewhero Bay Heritage Park..."
                                   FontFamily="IBM Plex Sans"
                                   FontSize="14"
                                   Foreground="#5A7263"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Native Birds & Reptiles Exhibit -->
                <Border Background="White" CornerRadius="10" BorderBrush="#3C6E71" BorderThickness="2" Padding="15" Margin="10">
                    <StackPanel>
                        <Image Source="/Assets/STOCK_fantailphoto.jpg" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                        <TextBlock Text="Native Birds and Reptiles Exhibit"
                                   FontFamily="Playfair Display"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2F2F2F"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="This is filler information and words for the Native Birds and Reptiles Exhibit at Onewhero Bay Heritage Park..."
                                   FontFamily="IBM Plex Sans"
                                   FontSize="14"
                                   Foreground="#5A7263"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Unique Marae -->
                <Border Background="White" CornerRadius="10" BorderBrush="#3C6E71" BorderThickness="2" Padding="15" Margin="10">
                    <StackPanel>
                        <Image Source="/Assets/STOCK_maraephoto.jpg" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                        <TextBlock Text="Unique Marae"
                                   FontFamily="Playfair Display"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2F2F2F"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="This is filler information and words for the unique Marae at Onewhero Bay Heritage Park..."
                                   FontFamily="IBM Plex Sans"
                                   FontSize="14"
                                   Foreground="#5A7263"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
