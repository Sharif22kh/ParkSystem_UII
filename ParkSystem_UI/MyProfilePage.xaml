<Page x:Class="ParkSystem_UI.MyProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParkSystem_UI"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1200"
      Title="MyProfilePage">

    <Grid Background="#F6F3EB">
        <StackPanel HorizontalAlignment="Center" Width="900" Margin="0,50,0,50">

            <TextBlock x:Name="WelcomeTextBlock"
                       Text="Welcome, [User]!"
                       FontFamily="Playfair Display"
                       FontSize="24"
                       Foreground="#2F2F2F"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Here is a list of your upcoming bookings:"
                       FontFamily="PlayFair Display"
                       FontSize="16"
                       TextAlignment="Center"
                       Foreground="#555555"
                       Margin="0,10,0,30"/>

            <ListBox x:Name="MyBookingsListBox" Background="Transparent" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="5" Margin="0,5" Padding="20" Width="850">
                            <StackPanel>
                                <TextBlock Text="{Binding EventDetails}"
                                           FontFamily="Playfair Display"
                                           FontSize="18"
                                           Foreground="#2F2F2F"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding EventDate, StringFormat='Date: {0:dd/MM/yyyy}'}"
                                           FontFamily="Playfair Display"
                                           FontSize="14"
                                           Foreground="#555555"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>
    </Grid>
</Page>