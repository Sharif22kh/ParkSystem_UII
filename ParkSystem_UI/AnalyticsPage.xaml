<Page x:Class="ParkSystem_UI.AnalyticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F6F3EB">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">

            <!-- Title Block -->
            <Border Background="#3C6E71"
                    CornerRadius="0"
                    BorderBrush="White"
                    BorderThickness="2"
                    Width="1200"
                    Padding="15"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Analytics and Reports"
                               FontFamily="Playfair Display"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Here are the current results for park analytics"
                               FontFamily="IBM Plex Sans"
                               FontSize="20"
                               FontStyle="Italic"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Analytics Cards -->
            <WrapPanel ItemWidth="580" ItemHeight="Auto" Orientation="Horizontal">

                <!-- Visitor Data -->
                <Border Background="White" CornerRadius="10" BorderBrush="#3C6E71" BorderThickness="2" Padding="15" Margin="10">
                    <StackPanel>
                        <Image Source="/Assets/STOCK_graphplaceholder1.png" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                        <TextBlock Text="Vistor Data"
                                   FontFamily="Playfair Display"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2F2F2F"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="This is filler information and words for the Vistor Data analytics at Onewhero Bay Heritage Park..."
                                   FontFamily="IBM Plex Sans"
                                   FontSize="14"
                                   Foreground="#5A7263"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>
                        <Button Content="Generate Report"
                                FontFamily="Playfair Display"
                                FontSize="16"
                                Background="#E2B857"
                                Foreground="#2F2F2F"
                                Padding="10"
                                Cursor="Hand"
                                HorizontalAlignment="Center"
                                Width="150"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Visitor Demographics -->
                <Border Background="White" CornerRadius="10" BorderBrush="#3C6E71" BorderThickness="2" Padding="15" Margin="10">
                    <StackPanel>
                        <Image Source="/Assets/STOCK_graphplaceholder3.png" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                        <TextBlock Text="Vistor Demographics"
                                   FontFamily="Playfair Display"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2F2F2F"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="This is filler information and words for the Visitor Demographic analytics at Onewhero Bay Heritage Park..."
                                   FontFamily="IBM Plex Sans"
                                   FontSize="14"
                                   Foreground="#5A7263"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>
                        <Button Content="Generate Report"
                                FontFamily="Playfair Display"
                                FontSize="16"
                                Background="#E2B857"
                                Foreground="#2F2F2F"
                                Padding="10"
                                Cursor="Hand"
                                HorizontalAlignment="Center"
                                Width="150"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Popular Attractions -->
                <Border Background="White" CornerRadius="10" BorderBrush="#3C6E71" BorderThickness="2" Padding="15" Margin="10">
                    <StackPanel>
                        <Image Source="/Assets/STOCK_graphplaceholder4.png" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                        <TextBlock Text="Popular Attractions"
                                   FontFamily="Playfair Display"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2F2F2F"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="This is filler information and words for the Popular Attractions analytics at Onewhero Bay Heritage Park..."
                                   FontFamily="IBM Plex Sans"
                                   FontSize="14"
                                   Foreground="#5A7263"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>
                        <Button Content="Generate Report"
                                FontFamily="Playfair Display"
                                FontSize="16"
                                Background="#E2B857"
                                Foreground="#2F2F2F"
                                Padding="10"
                                Cursor="Hand"
                                HorizontalAlignment="Center"
                                Width="150"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Event attendance -->
                <Border Background="White" CornerRadius="10" BorderBrush="#3C6E71" BorderThickness="2" Padding="15" Margin="10">
                    <StackPanel>
                        <Image Source="/Assets/STOCK_graphplaceholder1.png" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                        <TextBlock Text="Event attendance"
                                   FontFamily="Playfair Display"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2F2F2F"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="This is filler information and words for the Event attendance analytics at Onewhero Bay Heritage Park..."
                                   FontFamily="IBM Plex Sans"
                                   FontSize="14"
                                   Foreground="#5A7263"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>
                        <Button Content="Generate Report"
                                FontFamily="Playfair Display"
                                FontSize="16"
                                Background="#E2B857"
                                Foreground="#2F2F2F"
                                Padding="10"
                                Cursor="Hand"
                                HorizontalAlignment="Center"
                                Width="150"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
