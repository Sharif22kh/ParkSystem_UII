<Page x:Class="ParkSystem_UI.VisitorManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParkSystem_UI"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1200"
      Title="VisitorManagementPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F6F3EB">
        <StackPanel Margin="40" HorizontalAlignment="Center">

            <Border Background="#3C6E71"
                    CornerRadius="0"
                    BorderBrush="White"
                    BorderThickness="2"
                    Width="1200"
                    Padding="15"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Visitor Management"
                               FontFamily="Playfair Display"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="List of registered visitors"
                               FontFamily="Playfair Display"
                               FontSize="20"
                               FontStyle="Italic"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White"
                    CornerRadius="10"
                    BorderBrush="#3C6E71"
                    BorderThickness="2"
                    Padding="30"
                    Width="950"
                    HorizontalAlignment="Center">

                <ListBox x:Name="VisitorListBox" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="5" Margin="0,10" Padding="20" Width="850">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" Opacity="0.1"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontFamily="Playfair Display"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#2F2F2F"/>

                                        <TextBlock FontFamily="Playfair Display"
                                                   FontSize="14"
                                                   Foreground="#555555"
                                                   Margin="0,5,0,0">
                                            <Run Text="Email: "/>
                                            <Run Text="{Binding ContactInfo}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <Button x:Name="DeleteButton"
                                            Grid.Column="1"
                                            Content="Delete Visitor"
                                            FontFamily="Playfair Display"
                                            FontSize="14"
                                            Background="#A80000"
                                            Foreground="White"
                                            Padding="15,10"
                                            Margin="20,0,0,0"
                                            Cursor="Hand"
                                            VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>