    <Page x:Class="ParkSystem_UI.SuccessfulBookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParkSystem_UI"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1200"
      Title="SuccessfulBookingPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F6F3EB">
        <StackPanel Margin="40" HorizontalAlignment="Center">

            <!-- Title Block -->
            <Border Background="#3C6E71"
                    CornerRadius="12"
                    BorderBrush="White"
                    BorderThickness="2"
                    Width="1200"
                    Padding="15"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Booking Successful!"
                               FontFamily="Playfair Display"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Thank you for booking one of our special events with Onewhero Bay Heritage Park."
                               FontFamily="IBM Plex Sans"
                               FontSize="20"
                               FontStyle="Italic"
                               Foreground="#F6F3EB"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Confirmation Message Block -->
            <Border Background="White"
                    CornerRadius="10"
                    BorderBrush="#3C6E71"
                    BorderThickness="2"
                    Padding="30"
                    Width="600"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Your booking has been successfully made."
                               FontFamily="IBM Plex Sans"
                               FontSize="18"
                               Foreground="#2F2F2F"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="We look forward to seeing you! You can log in to view your booking details or visit our Registratio page to make an account with us!"
                               FontFamily="IBM Plex Sans"
                               FontSize="16"
                               Foreground="#5A7263"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,30"/>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
