<!-- Frontend code by Aki(Riria) Hamblett-Watt -->
    <Window x:Class="ParkSystem_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkSystem_UI"
        mc:Ignorable="d"
        Title="Onewhero Bay Heritage Park" Height="720" Width="1280"
        Background="#F6F3EB">

    <Window.Resources>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#E2B857"/>
            <Setter Property="Foreground" Value="#2F2F2F"/>
            <Setter Property="FontFamily" Value="Playfair Display"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="White"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F4D06F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                <Setter Property="Foreground" Value="#2F2F2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Homepage Button Style -->
        <ControlTemplate x:Key="LogoButtonTemplate" TargetType="Button">
            <Border BorderBrush="White" BorderThickness="3" CornerRadius="6" Padding="0">
                <Border x:Name="InnerBorder" Background="#3C6E71" CornerRadius="6" Padding="10,6">
                    <TextBlock Text="ONEWHERO BAY Heritage Park"
                               FontFamily="Playfair Display"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </Border>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="InnerBorder" Property="Background" Value="#4F8A7E"/>
                    <Setter Property="Foreground" Value="#F6F3EB"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Login Button Style -->
        <ControlTemplate x:Key="LoginButtonTemplate" TargetType="Button">
            <Border BorderBrush="White" BorderThickness="3" CornerRadius="6" Padding="0">
                <Border x:Name="LoginBorder" Background="#3C6E71" CornerRadius="6" Padding="10">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/Assets/STOCK_profileplaceholder.jpeg"
                               Width="50" Height="50"
                               Margin="0,0,0,1"/>
                        <TextBlock Text="Login"
                                   FontFamily="Playfair Display"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="LoginBorder" Property="Background" Value="#4F8A7E"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Content Frame -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <!-- Header Navigation -->
        <Border Grid.Row="0" Background="#5A7263" Height="100" BorderBrush="#3E4F45" BorderThickness="0,4,0,0">
            <DockPanel LastChildFill="False" VerticalAlignment="Center" Margin="20,0">

                <!-- Logo Button -->
                <Button Click="HomeButton_Click"
                        Template="{StaticResource LogoButtonTemplate}"
                        Cursor="Hand"
                        DockPanel.Dock="Left"
                        Margin="0,0,50,0"/>

                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Content="Park Information" Click="ParkInformation_Click" Style="{StaticResource NavButton}"/>
                    <Button Content="Registration" Click="RegistrationButton_Click" Style="{StaticResource NavButton}"/>
                    <Button Content="Booking" Click="BookingButton_Click" Style="{StaticResource NavButton}"/>
                    <Button Content="About Us / Contact" Click="AboutButton_Click" Style="{StaticResource NavButton}"/>
                </StackPanel>

                <!-- Login Button -->
                <Button Click="LoginButton_Click"
                        Template="{StaticResource LoginButtonTemplate}"
                        Cursor="Hand"
                        DockPanel.Dock="Right"
                        Margin="0,0,10,0"/>

            </DockPanel>
        </Border>
    </Grid>
</Window>


